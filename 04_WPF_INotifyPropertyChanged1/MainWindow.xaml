<Window x:Class="_04_WPF_INotifyPropertyChanged1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04_WPF_INotifyPropertyChanged1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="NOMBRE" HorizontalAlignment="Center"></Label>
        <TextBox Width="150" Height="30" Text="{Binding Path=Nombre, Mode=TwoWay}"></TextBox>

        <Label Content="APELLIDO" HorizontalAlignment="Center"></Label>
        <TextBox Width="150" Height="30" Text="{Binding Path=Apellido, Mode=TwoWay}"></TextBox>

        <Label Content="NOMBRE COMPLETO" HorizontalAlignment="Center"></Label>
        <TextBox Width="200" Height="30" Text="{Binding Path=NombreCompleto, Mode=TwoWay}"></TextBox>
    </StackPanel>
</Window>
